{
  "manifest_version": 3,
  "name": "Ali Grabber",
  "version": "1.1",
  "description": "Easily download slider and description images from AliExpress product listings.",
  "permissions": [
    "sidePanel",
    "scripting",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "*://*.aliexpress.us/*",
    "*://*.aliexpress.com/*"
  ],
  "side_panel": {
    "default_path": "popup.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open Ali Grabber"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.aliexpress.us/item/*", "*://*.aliexpress.com/item/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
